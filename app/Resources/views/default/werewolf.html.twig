{% extends 'base.html.twig' %}

{% block title %}Werewolf{% endblock %}

{% block body %}

    <div class="site-wrapper">

        <div class="site-wrapper-inner">

            <div class="cover-container">

                <div class="inner cover">
                    <h1 class="cover-heading">Werewolf</h1>
                    <p class="lead">Werewolf is an Android app that closely follows popular role-playing card game Werewolf</p>
                    <p class="lead">
                        <a href="http://www.mediafire.com/file/7ccn77h756smf52/Werewolf.apk" class="btn btn-lg btn-secondary">Download Now</a>
                    </p>
                </div>

                <div class="mastfoot">
                    <div class="inner">
                        <p>Petar Miličić</p>
                    </div>
                </div>

            </div>

        </div>

    </div>

{% endblock %}

{% block stylesheets %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://v4-alpha.getbootstrap.com/examples/cover/cover.css">
    <style>
        .site-wrapper {
            background-image: url("{{ asset('/images/background.jpg') }}");
            background-repeat: no-repeat;
            background-size: cover;
        }
        .site-wrapper-inner {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
{% endblock %}